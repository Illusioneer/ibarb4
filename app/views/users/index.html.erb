<h1>Listing users</h1>

<table>
  <thead>
    <tr>
      <th>Uid</th>
      <th>Name</th>
      <th>Password</th>
      <th>Mail</th>
      <th>Tagline</th>
      <th>Last update</th>
      <th>Last access</th>
      <th>Status</th>
      <th>Timezone</th>
      <th>Metadata</th>
      <th>User roles</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
    <tr>
      <td><%= user.uid %></td>
      <td><%= user.name %></td>
      <td><%= user.password %></td>
      <td><%= user.mail %></td>
      <td><%= user.tagline %></td>
      <td><%= user.last_update %></td>
      <td><%= user.last_access %></td>
      <td><%= user.status %></td>
      <td><%= user.timezone %></td>
      <td><%= user.metadata %></td>
      <td><%= user.user_roles %></td>
      <td><%= link_to 'Show', user %></td>
      <td><%= link_to 'Edit', edit_user_path(user) %></td>
      <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<br />

